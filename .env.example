# Database Configuration
DATABASE_URL=postgresql://echograph:changeme@postgres:5432/echograph
POSTGRES_USER=echograph
POSTGRES_PASSWORD=changeme
POSTGRES_DB=echograph

# Keycloak Database Configuration
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=keycloak_changeme

# Keycloak Configuration
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin_changeme
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_PUBLIC_URL=http://localhost:8080
KEYCLOAK_REALM=echograph
KEYCLOAK_CLIENT_ID=echograph-api
KEYCLOAK_CLIENT_SECRET=changeme-client-secret
KEYCLOAK_FRONTEND_CLIENT_ID=echograph-frontend

# Keycloak Hostname Configuration (for external access)
# These should be FULL URLs including http:// or https://
# For local dev:
#   KEYCLOAK_HOSTNAME_URL=http://localhost:8080
#   KEYCLOAK_HOSTNAME_ADMIN_URL=http://localhost:8080
# For external IP access:
#   KEYCLOAK_HOSTNAME_URL=http://your-server-ip:8080
#   KEYCLOAK_HOSTNAME_ADMIN_URL=http://your-server-ip:8080
# For production with domain:
#   KEYCLOAK_HOSTNAME_URL=https://yourdomain.com
#   KEYCLOAK_HOSTNAME_ADMIN_URL=https://yourdomain.com
KEYCLOAK_HOSTNAME_URL=http://localhost:8080
KEYCLOAK_HOSTNAME_ADMIN_URL=http://localhost:8080

# Vector Store (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# MinIO / S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=echograph-documents
MINIO_USE_SSL=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=change-this-to-a-random-secret-key
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend Configuration
# For local development, use localhost
# For production, use your server's IP or domain
API_HOST=http://localhost:8000
WS_HOST=ws://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# AI/ML Configuration
EMBEDDING_MODEL=sentence-transformers/multi-qa-mpnet-base-dot-v1
EMBEDDING_DIMENSION=768
USE_GPU=false

# OpenAI (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Cohere (Optional)
COHERE_API_KEY=

# Document Processing
MAX_UPLOAD_SIZE_MB=100
CHUNK_SIZE=512
CHUNK_OVERLAP=50
OCR_ENABLED=true

# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Celery / Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Monitoring
SENTRY_DSN=
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true
